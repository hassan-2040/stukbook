


<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">



                                    <h2 class="text-center">Sign in</h2>

                                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
              <div class="form-group">
                                    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
                                    <%= f.input :password, required: false, label: false, placeholder: "Password", input_html: {class: "form-control"} %>

              </div>

              <div class="form-group">
                      <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
              </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
